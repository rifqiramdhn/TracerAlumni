<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DetailProfilActivity">

    <ScrollView
        android:id="@+id/sv_detail_profil"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@id/bn_chat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="-52dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_body_detail_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_activity_detail_profil_foto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:src="@color/colorIconBiru"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_nama"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_activity_detail_profil_foto"
                tools:text="imam al-mukarom" />

            <TextView
                android:id="@+id/txt_judul_nim"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="NIM"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_nama" />

            <TextView
                android:id="@+id/tv_detail_profil_nim"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_nim"
                app:layout_constraintTop_toBottomOf="@+id/txt_judul_nim"
                tools:text="165150201111014" />

            <TextView
                android:id="@+id/tv_judul_password"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Password"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_nim"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_profil_nim" />

            <TextView
                android:id="@+id/tv_detail_profil_password"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/tv_detail_profil_nim"
                app:layout_constraintStart_toStartOf="@+id/tv_judul_password"
                app:layout_constraintTop_toBottomOf="@+id/tv_judul_password"
                tools:text="Password" />

            <TextView
                android:id="@+id/txt_judul_prodi"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Prodi"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_nim"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_profil_password" />

            <TextView
                android:id="@+id/txt_prodi"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/tv_detail_profil_nim"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_prodi"
                app:layout_constraintTop_toBottomOf="@+id/txt_judul_prodi"
                tools:text="Administrasi Bisnis" />

            <TextView
                android:id="@+id/txt_judul_angkatan"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Angkatan"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_prodi"
                app:layout_constraintTop_toBottomOf="@+id/txt_prodi" />

            <TextView
                android:id="@+id/txt_angkatan"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/txt_prodi"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_angkatan"
                app:layout_constraintTop_toBottomOf="@+id/txt_judul_angkatan"
                tools:text="2018" />

            <TextView
                android:id="@+id/txt_judul_thnLulus"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tahun Lulus"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_angkatan"
                app:layout_constraintTop_toBottomOf="@+id/txt_angkatan" />

            <TextView
                android:id="@+id/txt_thnLulus"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/txt_angkatan"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_thnLulus"
                app:layout_constraintTop_toBottomOf="@+id/txt_judul_thnLulus"
                tools:text="2022" />

            <TextView
                android:id="@+id/txt_judul_tglYudisium"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tanggal Yudisium"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_thnLulus"
                app:layout_constraintTop_toBottomOf="@+id/txt_thnLulus" />

            <TextView
                android:id="@+id/txt_tglYudisium"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/txt_thnLulus"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_tglYudisium"
                app:layout_constraintTop_toBottomOf="@+id/txt_judul_tglYudisium"
                tools:text="12-10-2022" />

            <TextView
                android:id="@+id/txt_judul_kewarganegaraan"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Kewarganegaraan"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_tglYudisium"
                app:layout_constraintTop_toBottomOf="@+id/txt_tglYudisium" />

            <TextView
                android:id="@+id/txt_kewarganegaraan"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/txt_tglYudisium"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_kewarganegaraan"
                app:layout_constraintTop_toBottomOf="@+id/txt_judul_kewarganegaraan"
                tools:text="WNA" />

            <TextView
                android:id="@+id/txt_judul_wargaNegara"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Warga Negara"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_kewarganegaraan"
                app:layout_constraintTop_toBottomOf="@+id/txt_kewarganegaraan" />

            <TextView
                android:id="@+id/txt_wargaNegara"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/txt_kewarganegaraan"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_wargaNegara"
                app:layout_constraintTop_toBottomOf="@+id/txt_judul_wargaNegara"
                tools:text="Nigeria" />

            <TextView
                android:id="@+id/tv_judul_email"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Email"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_wargaNegara"
                app:layout_constraintTop_toBottomOf="@+id/txt_wargaNegara" />

            <TextView
                android:id="@+id/tv_email"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/txt_wargaNegara"
                app:layout_constraintStart_toStartOf="@+id/tv_judul_email"
                app:layout_constraintTop_toBottomOf="@+id/tv_judul_email"
                tools:text="imammukarom@gmail.com" />

            <TextView
                android:id="@+id/txt_judul_ttl"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tempat, Tanggal Lahir"
                app:layout_constraintStart_toStartOf="@+id/tv_judul_email"
                app:layout_constraintTop_toBottomOf="@+id/tv_email" />

            <TextView
                android:id="@+id/txt_ttl"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/tv_email"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_ttl"
                app:layout_constraintTop_toBottomOf="@+id/txt_judul_ttl"
                tools:text="Jakarta, 12 Juni 1978" />

            <TextView
                android:id="@+id/txt_judul_alamat"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Alamat"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_ttl"
                app:layout_constraintTop_toBottomOf="@+id/txt_ttl" />

            <TextView
                android:id="@+id/txt_alamat"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/txt_ttl"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_alamat"
                app:layout_constraintTop_toBottomOf="@+id/txt_judul_alamat"
                tools:text="Jalan Veteran No.3 Lowokwaru Ketwanggede Malang" />

            <TextView
                android:id="@+id/txt_judul_kodePos"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Kode Pos"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_alamat"
                app:layout_constraintTop_toBottomOf="@+id/txt_alamat" />

            <TextView
                android:id="@+id/txt_kodePos"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/txt_alamat"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_kodePos"
                app:layout_constraintTop_toBottomOf="@+id/txt_judul_kodePos"
                tools:text="65123" />

            <TextView
                android:id="@+id/txt_judul_noHP"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="No. HP"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_kodePos"
                app:layout_constraintTop_toBottomOf="@+id/txt_kodePos" />

            <ImageView
                android:id="@+id/img_hp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_noHP"
                app:layout_constraintTop_toBottomOf="@+id/txt_judul_noHP"
                app:srcCompat="@drawable/ic_smartphone" />

            <TextView
                android:id="@+id/txt_noHP"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_hp"
                app:layout_constraintStart_toEndOf="@+id/img_hp"
                app:layout_constraintTop_toTopOf="@+id/img_hp"
                tools:text="0888888884828" />

            <TextView
                android:id="@+id/txt_judul_notelp"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="No. Telepon"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_noHP"
                app:layout_constraintTop_toBottomOf="@+id/img_hp" />

            <ImageView
                android:id="@+id/img_telp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_notelp"
                app:layout_constraintTop_toBottomOf="@+id/txt_judul_notelp"
                app:srcCompat="@drawable/ic_local_phone" />

            <TextView
                android:id="@+id/txt_notelp"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_telp"
                app:layout_constraintStart_toEndOf="@+id/img_telp"
                app:layout_constraintTop_toTopOf="@+id/img_telp"
                tools:text="(021) 712399" />

            <TextView
                android:id="@+id/txt_judul_facebook"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Facebook"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_notelp"
                app:layout_constraintTop_toBottomOf="@+id/img_telp" />

            <ImageView
                android:id="@+id/img_facebook"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_facebook"
                app:layout_constraintTop_toBottomOf="@+id/txt_judul_facebook"
                app:srcCompat="@drawable/ic_facebook" />

            <TextView
                android:id="@+id/txt_facebook"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_facebook"
                app:layout_constraintEnd_toEndOf="@+id/txt_kodePos"
                app:layout_constraintStart_toEndOf="@+id/img_facebook"
                app:layout_constraintTop_toTopOf="@+id/img_facebook"
                tools:text="https://www.facebook.com/imam" />

            <TextView
                android:id="@+id/txt_judul_twitter"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Twitter"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_facebook"
                app:layout_constraintTop_toBottomOf="@+id/img_facebook" />

            <ImageView
                android:id="@+id/img_twitter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@+id/txt_judul_twitter"
                app:layout_constraintTop_toBottomOf="@+id/txt_judul_twitter"
                app:srcCompat="@drawable/ic_twitter" />

            <TextView
                android:id="@+id/txt_twitter"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_twitter"
                app:layout_constraintEnd_toEndOf="@+id/txt_facebook"
                app:layout_constraintStart_toEndOf="@+id/img_twitter"
                app:layout_constraintTop_toTopOf="@+id/img_twitter"
                tools:text="https://www.twitter.com/imam" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_detail_profil_wa"
                android:layout_width="@dimen/icon_btn_width"
                android:layout_height="@dimen/icon_btn_height"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/card_rounded_edges"
                app:layout_constraintBottom_toBottomOf="@+id/txt_noHP"
                app:layout_constraintStart_toEndOf="@+id/txt_noHP"
                app:layout_constraintTop_toTopOf="@+id/txt_noHP">

                <ImageView
                    android:id="@+id/iv_detail_profil_wa"
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_whatsapp" />
            </android.support.constraint.ConstraintLayout>

            <Button
                android:id="@+id/btn_hapus_alumni"
                style="@style/TextAppearance.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="16dp"
                android:background="@android:color/holo_red_light"
                android:text="HAPUS ALUMNI"
                android:textColor="@color/white"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_twitter"
                app:layout_constraintVertical_bias="0.0" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bn_chat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:background="@color/colorIconBiru"
        android:elevation="8dp"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_nav_bottom_detail_profil">

    </android.support.design.widget.BottomNavigationView>
</android.support.constraint.ConstraintLayout>