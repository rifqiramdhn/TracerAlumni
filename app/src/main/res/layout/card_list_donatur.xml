<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_card"
    android:layout_marginRight="@dimen/margin_card"
    android:layout_marginBottom="@dimen/margin_card"
    android:background="@color/white"
    android:elevation="1dp">

    <TextView
        android:id="@+id/tv_nama_donatur"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Paidi Sugiono"
        android:textColor="@color/colorIconBiru2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_jumlah_donasi"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah Donasi : Rp 20.000.000"
        app:layout_constraintStart_toStartOf="@+id/tv_nama_donatur"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_donatur" />

    <TextView
        android:id="@+id/tv_card_list_donatur_tanggal"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="2019-08-17"
        android:textColor="@color/defaultTextColor"
        app:layout_constraintBottom_toBottomOf="@+id/tv_nama_donatur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_nama_donatur" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_view_profil_donatur"
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_btn_height"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_jumlah_donasi">

        <TextView
            android:id="@+id/tv_profil"
            style="@style/TextAppearance.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFIL DONATUR"
            android:textColor="@color/colorIconBiru"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>