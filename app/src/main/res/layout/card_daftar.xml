<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_daftar_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_card_daftar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@color/colorIconBiru"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_card_daftar_nama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Daryanto"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_card_daftar_prodi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_card_daftar"
        app:layout_constraintTop_toTopOf="@+id/img_card_daftar" />

    <TextView
        android:id="@+id/tv_card_daftar_prodi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="S1 - Teknik Informatika"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:fontFamily="@font/robotoregular"
        app:layout_constraintBottom_toBottomOf="@+id/img_card_daftar"
        app:layout_constraintStart_toStartOf="@+id/tv_card_daftar_nama"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_daftar_nama" />

    <TextView
        android:id="@+id/tv_card_daftar_angkatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="2019"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:fontFamily="@font/robotoregular"
        app:layout_constraintBottom_toBottomOf="@+id/tv_card_daftar_prodi"
        app:layout_constraintStart_toEndOf="@+id/barrier"
        app:layout_constraintTop_toTopOf="@+id/tv_card_daftar_prodi" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="tv_card_daftar_prodi"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="62dp" />

</android.support.constraint.ConstraintLayout>