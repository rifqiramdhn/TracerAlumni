<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_riwayat_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_card"
    android:layout_marginRight="@dimen/margin_card"
    android:layout_marginBottom="@dimen/margin_card"
    android:background="@color/white"
    android:elevation="1dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/tv_jabatan"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorIconBiru2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Manager" />

        <ImageView
            android:id="@+id/img_bangunnan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/colorIconBiru"
            app:layout_constraintBottom_toBottomOf="@+id/tv_nama_perusahaan"
            app:layout_constraintStart_toStartOf="@+id/tv_jabatan"
            app:layout_constraintTop_toTopOf="@+id/tv_nama_perusahaan"
            app:srcCompat="@drawable/ic_business" />

        <TextView
            android:id="@+id/tv_nama_perusahaan"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/img_bangunnan"
            app:layout_constraintTop_toBottomOf="@+id/tv_jabatan"
            tools:text="PT. Tembaga Pura" />

        <ImageView
            android:id="@+id/img_lokasi"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/colorIconBiru"
            app:layout_constraintBottom_toBottomOf="@+id/tv_lokasi_perusahaan"
            app:layout_constraintStart_toStartOf="@+id/img_bangunnan"
            app:layout_constraintTop_toTopOf="@+id/tv_lokasi_perusahaan"
            app:srcCompat="@drawable/ic_location_on" />

        <TextView
            android:id="@+id/tv_lokasi_perusahaan"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toEndOf="@+id/img_lokasi"
            app:layout_constraintTop_toBottomOf="@+id/tv_nama_perusahaan"
            tools:text="Palembang, Indonesia" />

        <ImageView
            android:id="@+id/img_gaji"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/colorIconBiru"
            app:layout_constraintBottom_toBottomOf="@+id/tv_pendapatan"
            app:layout_constraintStart_toStartOf="@+id/img_lokasi"
            app:layout_constraintTop_toTopOf="@+id/tv_pendapatan"
            app:srcCompat="@drawable/ic_attach_money" />

        <TextView
            android:id="@+id/tv_pendapatan"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_gaji"
            app:layout_constraintTop_toBottomOf="@+id/tv_lokasi_perusahaan"
            tools:text="Rp 5.000.000 / bulan" />

        <TextView
            android:id="@+id/tv_tahun_riwayat"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/defaultTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_jabatan"
            tools:text="sekarang" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>