<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/include_chat_room"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        layout="@layout/navigation_bar_top"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#eee"
        android:orientation="vertical"
        tools:listitem="@layout/item_chat"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/include_chat_room">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/edt_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="@drawable/background_edit_text_biasa"
            android:hint="Tulis pesan..."
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/img_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="#FFF"
            android:src="@mipmap/ic_kirim" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>