<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_card_permintaan_donasi_nama_donatur"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Paidi Sugiono"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/cl_card_permintaan_donasi_no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_card_permintaan_donasi_jumlah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rp200.000.000"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_card_permintaan_donasi_nama_donatur"
        app:layout_constraintStart_toStartOf="@+id/tv_card_permintaan_donasi_nama_donatur"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_permintaan_donasi_nama_donatur" />

    <TextView
        android:id="@+id/tv_card_permintaan_donasi_nama_donasi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pembangunan Kantin"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_card_permintaan_donasi_jumlah"
        app:layout_constraintStart_toStartOf="@+id/tv_card_permintaan_donasi_jumlah"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_permintaan_donasi_jumlah" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_card_permintaan_donasi_ok"
        android:layout_width="@dimen/icon_btn_width"
        android:layout_height="@dimen/icon_btn_height"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_card_permintaan_donasi_nama_donatur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_card_permintaan_donasi_nama_donatur">

        <ImageView
            android:id="@+id/iv_card_permintaan_donasi_ok"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_check" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_card_permintaan_donasi_no"
        android:layout_width="@dimen/icon_btn_width"
        android:layout_height="@dimen/icon_btn_height"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/cl_card_permintaan_donasi_ok"
        app:layout_constraintEnd_toStartOf="@+id/cl_card_permintaan_donasi_ok"
        app:layout_constraintTop_toTopOf="@+id/cl_card_permintaan_donasi_ok">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_clear" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_card_permintaan_donasi_detail_donasi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/card_sharp_edges"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cl_card_permintaan_donasi_profil_donatur"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_permintaan_donasi_nama_donasi">

        <TextView
            android:id="@+id/tv_card_permintaan_detail_donasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="DETAIL DONASI"
            android:textColor="@color/colorIconBiru"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_card_permintaan_donasi_profil_donatur"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/card_sharp_edges"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cl_card_permintaan_donasi_detail_donasi"
        app:layout_constraintTop_toTopOf="@+id/cl_card_permintaan_donasi_detail_donasi">

        <TextView
            android:id="@+id/tv_card_permintaan_donasi_profil_donatur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="PROFIL DONATUR"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_card_permintaan_donasi_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="12/12/2012"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_card_permintaan_donasi_nama_donasi"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>